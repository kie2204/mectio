{

    "manifest_version": 2,
    "name": "mectio",
    "version": "1.0",
  
    "description": "Transformerer din Lectio-oplevelse.",
  
    "icons": {
      "48": "icons/icon-48.png"
    },
    "permissions": ["cookies", "webRequest", "tabs"],

    "content_scripts": [
      {
        "matches": ["*://*.lectio.dk/*"],
        "js": ["main.js"]
      }
    ],

    "background": {
        "scripts": ["background.js"]
    },
  

    "browser_action": {
        "default_icon": {
            "48": "icons/icon-48-inactive.png"
        },
        "default_title": "mectio"
      }
  
  }